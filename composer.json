{
    "name": "phpsouthwales/slim-bootstrap",
    "description": "A Slim 3 bootstrap project",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve McDougall",
            "email": "juststevemcd@gmail.com",
            "homepage": "https://github.com/PHPSouthWales/slim-bootstrap"
        }
    ],
    "require": {
        "slim/slim": "^3.10",
        "symfony/console": "^4.1",
        "vlucas/phpdotenv": "^2.5",
        "symfony/var-dumper": "^4.1",
        "swiftmailer/swiftmailer": "^6.1",
        "slim/twig-view": "^2.4",
        "illuminate/database": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
